# OncoScope Environment Configuration
# Copy this file to .env and update values as needed

# =================
# Application Settings
# =================
APP_NAME=OncoScope
APP_VERSION=1.0.0
DEBUG_MODE=true

# =================
# API Configuration
# =================
API_HOST=localhost
API_PORT=8000
API_RELOAD=true

# =================
# Local AI Model (Ollama)
# =================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=oncoscope-cancer
OLLAMA_TIMEOUT=120

# =================
# Model Parameters
# =================
MODEL_TEMPERATURE=0.1
MODEL_TOP_P=0.9
MODEL_MAX_TOKENS=512

# =================
# Local Database
# =================
DATABASE_URL=sqlite:///./oncoscope.db

# =================
# Security (Development)
# =================
SECRET_KEY=dev-secret-key-change-for-production
CORS_ORIGINS=["http://localhost:3000", "file://"]

# =================
# Data Processing
# =================
USE_EXPERT_CLINVAR=true
USE_TARGETED_COSMIC=true
USE_FDA_VERIFIED_DRUGS=true
MIN_PATHOGENICITY_SCORE=0.7

# =================
# Performance
# =================
MAX_CONCURRENT_ANALYSES=3
CACHE_ENABLED=true

# =================
# Logging
# =================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/oncoscope.log

# =================
# Development Flags
# =================
DEV_MODE=true
ENABLE_TELEMETRY=false